<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @seccion.nombre %></h1>
    <a href="<%= url_for :action => :show, :id => @seccion.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">Cancel</a>
    <a href="<%= url_for :action => :delete, :id => @seccion.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">Delete</a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @seccion.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="seccion[nombre]" class="fieldLabel">Nombre</label>
            <input type="text" id="seccion[nombre]" name="seccion[nombre]" value="<%= @seccion.nombre %>" <%= placeholder( "Nombre" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
