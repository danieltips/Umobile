<div data-role="page" data-add-back-btn="false">

  <div data-role="header" data-position="inline">
    <h1><%= @alumno.codigo %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="arrow-l" data-direction="reverse">Back</a>
    <a href="<%= url_for :action => :edit, :id => @alumno.object %>" class="ui-btn-right" data-icon="star">Edit</a>
  </div>

  <div data-role="content">
    <ul data-role="listview">
      
          <li>
            <div class="itemLabel">Codigo</div>
            <div class="itemValue"><%= @alumno.codigo %></div>
          </li>
      
          <li>
            <div class="itemLabel">Nombre</div>
            <div class="itemValue"><%= @alumno.nombre %></div>
          </li>
      
          <li>
            <div class="itemLabel">Password</div>
            <div class="itemValue"><%= @alumno.password %></div>
          </li>
      
    </ul>
  </div>

</div>
