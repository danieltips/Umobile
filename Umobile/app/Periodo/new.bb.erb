<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1>New Periodo</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @periodo.object %>"/>
      <table>
          
            <tr>
                <td class="itemLabel">Id: </td>
                <td class="itemValue"><input type="text" name="periodo[id]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Inicio: </td>
                <td class="itemValue"><input type="text" name="periodo[inicio]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Fin: </td>
                <td class="itemValue"><input type="text" name="periodo[fin]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Periodo: </td>
                <td class="itemValue"><input type="text" name="periodo[periodo]"/></td>
            </tr>
          
      </table>
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
