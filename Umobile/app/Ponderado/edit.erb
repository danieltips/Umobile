<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @ponderado.ponderado %></h1>
    <a href="<%= url_for :action => :show, :id => @ponderado.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">Cancel</a>
    <a href="<%= url_for :action => :delete, :id => @ponderado.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">Delete</a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @ponderado.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="ponderado[ponderado]" class="fieldLabel">Ponderado</label>
            <input type="text" id="ponderado[ponderado]" name="ponderado[ponderado]" value="<%= @ponderado.ponderado %>" <%= placeholder( "Ponderado" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
