<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @ponderado.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">Cancel</a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @ponderado.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="ponderado[ponderado]" class="fieldLabel">Ponderado</label>
            <input type="text" id="ponderado[ponderado]" name="ponderado[ponderado]" <%= placeholder("Ponderado") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
