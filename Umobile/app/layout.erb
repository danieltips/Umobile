<!DOCTYPE html>
<html lang="en">

<head>

    <title>Umobile</title>
    <meta name="viewport" content="width=device-width; initial-scale=1.0; maximum-scale=1.0; user-scalable=0;"/>
    <meta charset="utf-8" />
    <% if System::get_property('platform') == 'APPLE' || System::get_property('platform') == 'ANDROID' %>
        <script src="/public/jquery/jquery-1.4.1.min.js" type="text/javascript"></script>
        <script src="/public/jqtouch/jquery.1.3.2.min.js" type="text/javascript"></script>
        <script src="/public/jqtouch/jqtouch.js" type="text/javascript"></script>
        <script src="/public/js/application.js" type="text/javascript"></script>
        <link href="/public/jqtouch/jqtouch.css" type="text/css" rel="stylesheet"/>
        
         <% if System::get_property('platform') == 'APPLE' %>
            <link href="/public/jqtouch/jqtouch-iphone.css" type="text/css" rel="stylesheet"/>
        <% end %>
        <script type="text/javascript" >$.jQTouch();</script>
    <% end %>

    <% if System::get_property('platform') == 'APPLE' %>
        <link href="/public/css/global.css" rel="stylesheet" type="text/css" />
    <% elsif System::get_property('platform') == 'ANDROID' %>
        <link href="/public/css/umobile.css" rel="stylesheet" type="text/css" />

    <% end %>
</head>
<body>
    <%= @content %>
</body>

</html>
