<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1>New Horario</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @horario.object %>"/>
      <table>
          
            <tr>
                <td class="itemLabel">Seccion: </td>
                <td class="itemValue"><input type="text" name="horario[seccion]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Dia: </td>
                <td class="itemValue"><input type="text" name="horario[dia]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Horainicio: </td>
                <td class="itemValue"><input type="text" name="horario[horaInicio]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Horafin: </td>
                <td class="itemValue"><input type="text" name="horario[horaFin]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Salon: </td>
                <td class="itemValue"><input type="text" name="horario[salon]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Tipo: </td>
                <td class="itemValue"><input type="text" name="horario[tipo]"/></td>
            </tr>
          
      </table>
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
