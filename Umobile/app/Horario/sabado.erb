<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Horarios</h1>
    <a href="<%= Rho::RhoConfig.start_path2 %>" class="ui-btn-left" data-icon="home" data-direction="reverse">Home</a>
    <a href="<%= url_for :action => :new %>" class="ui-btn-right" data-icon="plus">New</a>
  </div>

  <div data-role="content">

      <div class="ui-grid-b">
      
          <div class="ui-block-a">
          <a class="fade" href="<%= url_for :action => :lunes %>" data-role="button"  	data-	transition="fade">L</a>
          </div>
          
          <div class="ui-block-b">
          <a class="fade" href="<%= url_for :action => :martes %>" data-role="button"  	data-	transition="fade">M</a>
          </div>
          			
          <div class="ui-block-c">
          <a class="fade" href="<%= url_for :action => :miercoles %>" data-role="button"  	data-	transition="fade">Mi</a>
          </div>
          			
          
          <div class="ui-block-a">
          <a class="fade" href="<%= url_for :action => :jueves %>" data-role="button"  	data-	transition="fade">J</a>
          </div>
          			
          <div class="ui-block-b">
          <a class="fade" href="<%= url_for :action => :viernes %>" data-role="button"  	data-	transition="fade">V</a>
          </div>
          
          <div class="ui-block-c">
          <a class="fade" href="<%= url_for :action => :sabado %>" data-role="button"  font-weight="bold"
          background="#111111" vdata-theme="a" 	data-	transition="fade">S</a>
          </div>	
      
      </div>


    	<ul data-role="listview" data-inset="true">
    	
          <% @horarios.each do |horario| %>
          
            <li data-role="list-divider" > <p> <%= horario.salon %> <p> </li>
            
            <li>
              <h3><%= horario.horainicio %> - <%= horario.horafin %>  </h3>
               <p><strong><%= horario.salon %> </strong></p>
               <p><%= horario.sede %> </p>
               <p><%= horario.tipoclase %> </p>
               <p class="ui-li-aside"><strong>6:24</strong>PM</p>
               
            </li>
          
          <% end %>
    
      </ul>
			
  </div>

</div>
