<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @notas.nota %></h1>
    <a href="<%= url_for :action => :show, :id => @notas.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">Cancel</a>
    <a href="<%= url_for :action => :delete, :id => @notas.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">Delete</a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @notas.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="notas[nota]" class="fieldLabel">Nota</label>
            <input type="text" id="notas[nota]" name="notas[nota]" value="<%= @notas.nota %>" <%= placeholder( "Nota" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
