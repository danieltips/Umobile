<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @calificacion.object %>
    <h1>Edit <%= @calificacion.id%></h1>
    <%= link_to "Delete", :action => :delete, :id => @calificacion.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @calificacion.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Id: </td>
              <td class="itemValue"><input type="text" name="calificacion[id]" value="<%= @calificacion.id %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Idcurso: </td>
              <td class="itemValue"><input type="text" name="calificacion[idcurso]" value="<%= @calificacion.idcurso %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Evaluacion: </td>
              <td class="itemValue"><input type="text" name="calificacion[evaluacion]" value="<%= @calificacion.evaluacion %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Nota: </td>
              <td class="itemValue"><input type="text" name="calificacion[nota]" value="<%= @calificacion.nota %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Numero: </td>
              <td class="itemValue"><input type="text" name="calificacion[numero]" value="<%= @calificacion.numero %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Peso: </td>
              <td class="itemValue"><input type="text" name="calificacion[peso]" value="<%= @calificacion.peso %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Tipo: </td>
              <td class="itemValue"><input type="text" name="calificacion[tipo]" value="<%= @calificacion.tipo %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
