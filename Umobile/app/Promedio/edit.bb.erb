<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @promedio.object %>
    <h1>Edit <%= @promedio.id%></h1>
    <%= link_to "Delete", :action => :delete, :id => @promedio.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @promedio.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Id: </td>
              <td class="itemValue"><input type="text" name="promedio[id]" value="<%= @promedio.id %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Promedio: </td>
              <td class="itemValue"><input type="text" name="promedio[promedio]" value="<%= @promedio.promedio %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
