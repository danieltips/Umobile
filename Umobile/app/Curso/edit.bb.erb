<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @curso.object %>
    <h1>Edit <%= @curso.nombre%></h1>
    <%= link_to "Delete", :action => :delete, :id => @curso.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @curso.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Nombre: </td>
              <td class="itemValue"><input type="text" name="curso[nombre]" value="<%= @curso.nombre %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Codigo: </td>
              <td class="itemValue"><input type="text" name="curso[codigo]" value="<%= @curso.codigo %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Creditos: </td>
              <td class="itemValue"><input type="text" name="curso[creditos]" value="<%= @curso.creditos %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Nivel: </td>
              <td class="itemValue"><input type="text" name="curso[nivel]" value="<%= @curso.nivel %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Profesor: </td>
              <td class="itemValue"><input type="text" name="curso[profesor]" value="<%= @curso.profesor %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Seccion: </td>
              <td class="itemValue"><input type="text" name="curso[seccion]" value="<%= @curso.seccion %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
