<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1>New Curso</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @curso.object %>"/>
      <table>
          
            <tr>
                <td class="itemLabel">Nombre: </td>
                <td class="itemValue"><input type="text" name="curso[nombre]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Codigo: </td>
                <td class="itemValue"><input type="text" name="curso[codigo]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Creditos: </td>
                <td class="itemValue"><input type="text" name="curso[creditos]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Nivel: </td>
                <td class="itemValue"><input type="text" name="curso[nivel]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Profesor: </td>
                <td class="itemValue"><input type="text" name="curso[profesor]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Seccion: </td>
                <td class="itemValue"><input type="text" name="curso[seccion]"/></td>
            </tr>
          
      </table>
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
